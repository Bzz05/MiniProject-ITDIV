@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<script>
    @if (TempData.ContainsKey("ErrorMessage"))
    {
        <text>
        window.alert('@TempData["ErrorMessage"]');
        </text>
    }
</script>

<div class="container">
    <h1>Login</h1>
    <form method="post">
            <div class="form-group">
                <label asp-for="Model.Email">Email:</label>
                <input type="text" id="email" name="email" placeholder="Enter your email" asp-for="Model.Email">
            </div>
            <div class="form-group">
                <label asp-for="Model.Password">Password:</label>
                <input type="password" id="password" name="password" placeholder="Enter your password" asp-for="Model.Password"/>
            </div>
            <div class="form-group">
                <button class="submit-button" type="submit">Login</button>
            </div>
    </form>
</div>